{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "vite.config.ts",
    "tsdown.config.mts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}